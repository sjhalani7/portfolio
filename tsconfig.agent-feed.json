{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "scripts/.dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "scripts/generate-agent-feed.ts",
    "src/lib/agentFeed.ts",
    "src/data/**/*.ts",
    "src/data/**/*.json"
  ],
  "exclude": ["node_modules"]
}
